<Window x:Class="Synapse.Crypto.Patterns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xb="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Synapse.Crypto.Patterns"
        mc:Ignorable="d"
        Title="Сканер формаций" Height="450" Width="800">

    <xb:Interaction.Triggers>
        <xb:EventTrigger EventName="Loaded">
            <xb:CallMethodAction MethodName="OnLoaded" TargetObject="{Binding}"/>
        </xb:EventTrigger>
        <xb:EventTrigger EventName="Unloaded">
            <xb:CallMethodAction MethodName="OnUnloaded" TargetObject="{Binding}"/>
        </xb:EventTrigger>
        <xb:EventTrigger EventName="Closing">
            <xb:CallMethodAction MethodName="OnClosing" TargetObject="{Binding}"/>
        </xb:EventTrigger>
    </xb:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Menu>
                <MenuItem Header="CryptoIndex">
                    <MenuItem Header="Full calculate" 
                              ToolTip="Расчитать индекс на базе всех данных хранилища" Command="{Binding FullCalculateCommand}"/>
                    <MenuItem Header="Load indexes" 
                              ToolTip="Загрузить значения индекса из файла" Command="{Binding LoadCryptoIndexCommand}"/>
                </MenuItem>
            </Menu>
            <ToolBar Grid.Row="1">
                <Button Content="Test chart" Foreground="Blue" Command="{Binding OpenTestChartCommand}"/>
            </ToolBar>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <local:ScanTableView DataContext="{Binding ScanTableViewModel}" />
            <!--<GridSplitter Grid.Column="1" Width="3" Background="Gray" VerticalAlignment="Stretch"/>
            <StackPanel Grid.Column="2" Background="AliceBlue"  HorizontalAlignment="Stretch"></StackPanel>-->
        </Grid>
        <StatusBar Grid.Row="2">
            <TextBlock Text="{Binding StatusMessage}" Margin="5,2"/>
        </StatusBar>
    </Grid>
</Window>
